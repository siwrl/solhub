local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer

local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
ScreenGui.ResetOnSpawn = false
ScreenGui.DisplayOrder = 1000

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.AnchorPoint = Vector2.new(0.5,0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(255,0,0)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.ClipsDescendants = true
MainFrame.BackgroundTransparency = 1

local MainCorner = Instance.new("UICorner", MainFrame)
MainCorner.CornerRadius = UDim.new(0,15)

local Shadow = Instance.new("Frame", MainFrame)
Shadow.Size = UDim2.new(1,0,1,0)
Shadow.Position = UDim2.new(0,0,0,0)
Shadow.BackgroundColor3 = Color3.fromRGB(0,0,0)
Shadow.BackgroundTransparency = 0.7
Shadow.ZIndex = 0
Shadow.ClipsDescendants = true
local ShadowCorner = Instance.new("UICorner", Shadow)
ShadowCorner.CornerRadius = UDim.new(0,15)

local Gradient = Instance.new("UIGradient", MainFrame)
Gradient.Color = ColorSequence.new{ColorSequenceKeypoint.new(0, Color3.fromRGB(255,0,0)), ColorSequenceKeypoint.new(1, Color3.fromRGB(0,0,0))}
Gradient.Rotation = 45

local TopBar = Instance.new("Frame", MainFrame)
TopBar.Size = UDim2.new(1,0,0,30)
TopBar.BackgroundTransparency = 1
TopBar.ZIndex = 2

local Title = Instance.new("TextLabel", TopBar)
Title.Text = "Sol Hub"
Title.Size = UDim2.new(1,0,1,0)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(255,255,255)
Title.Font = Enum.Font.Gotham
Title.TextSize = 18
Title.TextScaled = true
Title.RichText = true

local ExitBtn = Instance.new("TextButton", TopBar)
ExitBtn.Size = UDim2.new(0,30,0,30)
ExitBtn.Position = UDim2.new(1,-30,0,0)
ExitBtn.Text = "✕"
ExitBtn.BackgroundColor3 = Color3.fromRGB(50,50,50)
ExitBtn.TextColor3 = Color3.fromRGB(255,255,255)
ExitBtn.Font = Enum.Font.Gotham
ExitBtn.TextSize = 18
ExitBtn.AutoButtonColor = false
local ExitCorner = Instance.new("UICorner", ExitBtn)
ExitCorner.CornerRadius = UDim.new(0,5)
ExitBtn.MouseEnter:Connect(function() TweenService:Create(ExitBtn,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(70,0,0)}):Play() end)
ExitBtn.MouseLeave:Connect(function() TweenService:Create(ExitBtn,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(50,50,50)}):Play() end)
ExitBtn.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

local MinBtn = Instance.new("TextButton", TopBar)
MinBtn.Size = UDim2.new(0,30,0,30)
MinBtn.Position = UDim2.new(1,-60,0,0)
MinBtn.Text = "—"
MinBtn.BackgroundColor3 = Color3.fromRGB(50,50,50)
MinBtn.TextColor3 = Color3.fromRGB(255,255,255)
MinBtn.Font = Enum.Font.Gotham
MinBtn.TextSize = 18
MinBtn.AutoButtonColor = false
local MinCorner = Instance.new("UICorner", MinBtn)
MinCorner.CornerRadius = UDim.new(0,5)
MinBtn.MouseEnter:Connect(function() TweenService:Create(MinBtn,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(100,100,0)}):Play() end)
MinBtn.MouseLeave:Connect(function() TweenService:Create(MinBtn,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(50,50,50)}):Play() end)
MinBtn.MouseButton1Click:Connect(function()
	if MainFrame.Size.Y.Offset == 300 then
		MainFrame.Size = UDim2.new(0,400,0,30)
	else
		MainFrame.Size = UDim2.new(0,400,0,300)
	end
end)

local dragging, dragInput, dragStart, startPos
local function update(input)
	local delta = input.Position - dragStart
	MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

TopBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = MainFrame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)
TopBar.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)
UserInputService.InputChanged:Connect(function(input)
	if input == dragInput and dragging then update(input) end
end)

local TabButtons = Instance.new("Frame", MainFrame)
TabButtons.Size = UDim2.new(1,0,0,30)
TabButtons.Position = UDim2.new(0,0,0,30)
TabButtons.BackgroundTransparency = 1
TabButtons.ZIndex = 2

local tabNames = {"99 Nights","Grow a Garden","Steal a Brainrot"}
local tabButtons, tabFrames = {},{}

local indicator = Instance.new("Frame", TabButtons)
indicator.Size = UDim2.new(0, 120, 0, 3)
indicator.Position = UDim2.new(0,0,1,0)
indicator.BackgroundColor3 = Color3.fromRGB(255,255,255)
indicator.BorderSizePixel = 0
local indicatorCorner = Instance.new("UICorner", indicator)
indicatorCorner.CornerRadius = UDim.new(0,2)

for i,name in ipairs(tabNames) do
	local btn = Instance.new("TextButton", TabButtons)
	btn.Text = name
	btn.Size = UDim2.new(0, 120, 1, 0)
	btn.Position = UDim2.new(0,(i-1)*130,0,0)
	btn.BackgroundColor3 = Color3.fromRGB(50,50,50)
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
	btn.TextScaled = true
	btn.RichText = true
	btn.AutoButtonColor = false
	local btnCorner = Instance.new("UICorner", btn)
	btnCorner.CornerRadius = UDim.new(0,5)
	btn.MouseEnter:Connect(function() TweenService:Create(btn,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(70,70,70)}):Play() end)
	btn.MouseLeave:Connect(function() TweenService:Create(btn,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(50,50,50)}):Play() end)
	tabButtons[i] = btn

	local frame = Instance.new("Frame", MainFrame)
	frame.Size = UDim2.new(1,0,1,-60)
	frame.Position = UDim2.new(0,0,0,60)
	frame.BackgroundTransparency = 1
	frame.Visible = false
	tabFrames[i] = frame
end

tabFrames[1].Visible = true

local function showTab(index)
	for i,frame in ipairs(tabFrames) do
		if i==index then
			frame.Position = UDim2.new(1,0,0,60)
			frame.Visible = true
			TweenService:Create(frame, TweenInfo.new(0.3), {Position=UDim2.new(0,0,0,60)}):Play()
		else
			frame.Visible = false
		end
	end
	TweenService:Create(indicator,TweenInfo.new(0.3),{Position=UDim2.new(0,(index-1)*130,1,0)}):Play()
end

for i,btn in ipairs(tabButtons) do
	btn.MouseButton1Click:Connect(function() showTab(i) end)
end

local Voidware = Instance.new("TextButton", tabFrames[1])
Voidware.Size = UDim2.new(0,180,0,40)
Voidware.Position = UDim2.new(0.5,-90,0.5,-20)
Voidware.Text = "Voidware"
Voidware.BackgroundColor3 = Color3.fromRGB(30,30,30)
Voidware.TextColor3 = Color3.fromRGB(255,255,255)
Voidware.Font = Enum.Font.Gotham
Voidware.TextSize = 16
Voidware.TextScaled = true
Voidware.AutoButtonColor = false
local VoidCorner = Instance.new("UICorner", Voidware)
VoidCorner.CornerRadius = UDim.new(0,8)
Voidware.MouseEnter:Connect(function() TweenService:Create(Voidware,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(50,50,50)}):Play() end)
Voidware.MouseLeave:Connect(function() TweenService:Create(Voidware,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(30,30,30)}):Play() end)
Voidware.MouseButton1Click:Connect(function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/VapeVoidware/VW-Add/main/loader.lua",true))()
end)

TweenService:Create(MainFrame,TweenInfo.new(0.5),{BackgroundTransparency=0}):Play()
